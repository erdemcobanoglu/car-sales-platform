@model Presentation.Models.Vehicle

@functions {
    string Variant(string? url, string suffix)
    {
        if (string.IsNullOrWhiteSpace(url)) return "";
        if (url.EndsWith("_large.jpg", StringComparison.OrdinalIgnoreCase))
            return url.Replace("_large.jpg", $"_{suffix}.jpg");

        var dot = url.LastIndexOf('.');
        if (dot < 0) return url;
        return url.Insert(dot, $"_{suffix}");
    }
}

@{
    ViewData["Title"] = "Vehicle Details";

    // ✅ sadece URL'i dolu olan fotolar
    var photos = (Model.Photos ?? Enumerable.Empty<Presentation.Models.VehiclePhoto>())
        .Where(p => !string.IsNullOrWhiteSpace(p.Url))
        .OrderBy(p => p.SortOrder)
        .ToList();

    // ✅ placeholder yok: kırık/boşsa ana foto alanı hiç görünmeyecek
    var cover = photos.FirstOrDefault(p => p.IsCover)?.Url
                ?? photos.FirstOrDefault()?.Url;

    // ✅ JS için sıralı large url listesi
    var photoUrls = photos.Select(p => p.Url).Where(u => !string.IsNullOrWhiteSpace(u)).ToList();
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h2 class="mb-0">
            @Model.Make.Name @Model.Model.Name
            @if (Model.Trim != null)
            {
                <span class="text-muted">• @Model.Trim.Name</span>
            }
        </h2>
        <div class="text-muted">
            @Model.Year • @Model.BodyType • @Model.FuelType • @Model.Transmission
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-controller="Vehicles" asp-action="Index">Back</a>
        <a class="btn btn-primary" href="#" onclick="openEditFromDetails(@Model.Id); return false;">Edit</a>
    </div>
</div>

<div class="row g-3">
    <!-- LEFT: Photos -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">

                <!-- ✅ Ana foto alanı başlangıçta gizli (flash / broken icon yok) -->
                <div id="mainPhotoWrap" class="ratio ratio-16x9 bg-light rounded overflow-hidden d-none" style="max-height:520px;">
                    <img id="mainPhoto"
                         src=""
                         class="w-100 h-100"
                         style="object-fit: cover;"
                         alt="" />
                </div>

                @if (photos.Any())
                {
                    <div class="mt-3 d-flex flex-wrap gap-2">
                        @foreach (var p in photos)
                        {
                            var thumbUrl = Variant(p.Url, "thumb");

                            <button type="button"
                                    class="border-0 p-0 bg-transparent"
                                    onclick="setMainPhoto('@p.Url')">
                                <img src="@thumbUrl"
                                     alt=""
                                     width="88"
                                     height="56"
                                     class="rounded border"
                                     style="object-fit: cover;"
                                     onerror="this.closest('button')?.remove();" />
                            </button>
                        }
                    </div>
                }
                else
                {
                    <div class="mt-3 text-muted">No photos uploaded yet.</div>
                }
            </div>
        </div>
    </div>

    <!-- RIGHT: Quick Facts -->
    <div class="col-lg-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-white">
                <strong>Quick facts</strong>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-6 text-muted">Mileage</dt>
                    <dd class="col-6 text-end fw-semibold">
                        @Model.Mileage.ToString("N0") @Model.MileageUnit
                    </dd>

                    <dt class="col-6 text-muted">Year</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.Year</dd>

                    <dt class="col-6 text-muted">Engine</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.EngineLiters.ToString("0.0") L</dd>

                    <dt class="col-6 text-muted">Fuel</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.FuelType</dd>

                    <dt class="col-6 text-muted">Transmission</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.Transmission</dd>

                    <dt class="col-6 text-muted">Owners</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.TotalOwners</dd>

                    <dt class="col-6 text-muted">NCT expiry</dt>
                    <dd class="col-6 text-end fw-semibold">
                        @(Model.NctExpiry.HasValue ? Model.NctExpiry.Value.ToString("yyyy-MM-dd") : "-")
                    </dd>

                    <dt class="col-6 text-muted">Price</dt>
                    <dd class="col-6 text-end fw-semibold">€@Model.Price.ToString("N0")</dd>

                    <dt class="col-6 text-muted">Contact </dt>
                    <dd class="col-6 text-end fw-semibold">@Model.Owner?.Profile?.Phone</dd>
                </dl>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <strong>Actions</strong>
            </div>
            <div class="card-body d-grid gap-2">
                <a class="btn btn-outline-primary" asp-controller="Vehicles" asp-action="Index">Go to list</a>
                <button class="btn btn-outline-danger" type="button"
                        onclick="deleteFromDetails(@Model.Id)">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Overview -->
