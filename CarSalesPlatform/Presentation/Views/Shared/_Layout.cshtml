<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Presentation</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentation.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
            <div class="container-fluid">

                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center gap-2 fw-bold"
                   asp-controller="Home" asp-action="Index">
                    <span class="badge bg-dark text-white rounded-pill px-3 py-2">CSI</span>
                    <span class="text-primary">Car Sales Ireland</span>
                    <span class="badge bg-light text-dark border">Marketplace</span>
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#topNav"
                        aria-controls="topNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNav">

                    <!-- Left menu -->
                    <ul class="navbar-nav me-lg-3 mb-2 mb-lg-0">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Vehicles" asp-action="Index">My vehicles</a>
                            </li>
                        }
                    </ul>

                    <!-- ✅ Center search (guest friendly) -->
                    <form class="d-flex flex-grow-1 mx-lg-3 my-2 my-lg-0"
                          method="get"
                          asp-controller="Home"
                          asp-action="Index">
                        <div class="input-group w-100">
                            <span class="input-group-text bg-white">🔎</span>
                            <input class="form-control"
                                   type="search"
                                   name="q"
                                   value="@(ViewBag.Search ?? "")"
                                   placeholder="Search make, model, year..."
                                   aria-label="Search" />
                            <button class="btn btn-dark" type="submit">Search</button>
                        </div>
                    </form>

                    <!-- Right actions -->
                    <div class="d-flex align-items-center gap-2 ms-lg-auto">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <a class="btn btn-warning fw-semibold"
                               asp-controller="Vehicles"
                               asp-action="Create">
                                + Sell your car
                            </a>

                            <div class="dropdown">
                                <a class="btn btn-outline-secondary dropdown-toggle text-truncate"
                                   style="max-width: 260px;"
                                   href="#"
                                   id="profileDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    @((User.Identity?.Name) ?? "Account")
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Profile" asp-action="Index">My profile</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Vehicles" asp-action="Index">My vehicles</a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-outline-secondary"
                               asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                            <a class="btn btn-dark"
                               asp-controller="Account" asp-action="Register">
                                Register
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Presentation -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
