<!-- Hidden anti-forgery for delete -->
<form id="antiForgeryFormDetails" method="post">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        // ✅ Ana foto: kırık ise sıradaki sağlamı otomatik seç
        const wrap = document.getElementById('mainPhotoWrap');
        const main = document.getElementById('mainPhoto');

        function hideMain() {
            wrap.classList.add('d-none');
            main.removeAttribute('src');
        }

        function preload(url) {
            return new Promise(resolve => {
                if (!url || !url.trim()) return resolve(false);
                const img = new Image();
                img.onload = () => resolve(true);
                img.onerror = () => resolve(false);
                img.src = url;
            });
        }

        async function showFirstWorking(urls) {
            hideMain();

            for (const url of urls) {
                const ok = await preload(url);
                if (ok) {
                    main.src = url;
                    wrap.classList.remove('d-none');
                    return true;
                }
            }

            // hiçbiri çalışmadıysa: hiç gösterme
            hideMain();
            return false;
        }

        // tıklamada da kontrol ederek göster
        function setMainPhoto(url) {
            showFirstWorking([url]);
        }

        // ilk yükleme: cover önce, sonra diğerleri
        (function initMain() {
            const cover = '@(cover ?? "")';
            const all = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(photoUrls));

            const unique = [];
            if (cover && cover.trim()) unique.push(cover);

            for (const u of all) {
                if (u && (!cover || u !== cover)) unique.push(u);
            }

            showFirstWorking(unique);
        })();

        async function openEditFromDetails(id) {
            window.location.href = '@Url.Action("Edit", "Vehicles")/' + id;
        }

        function deleteFromDetails(id) {
            if (!confirm('Delete this vehicle?')) return;

            const token = document.querySelector('#antiForgeryFormDetails input[name="__RequestVerificationToken"]').value;

            fetch('@Url.Action("Delete", "Vehicles")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: new URLSearchParams({ id: id, __RequestVerificationToken: token })
            })
                .then(r => r.json())
                .then(res => {
                    if (res && res.ok) {
                        window.location.href = '@Url.Action("Index", "Vehicles")';
                    } else {
                        alert('Delete failed');
                    }
                })
                .catch(() => alert('Delete failed'));
        }
    </script>
}
