@{
    ViewData["Title"] = "Vehicles";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />

<h2>Vehicles</h2>

<table id="vehiclesTable" class="display" style="width:100%; margin-top:12px;">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Make</th>
            <th>Model</th>
            <th>Trim</th>
            <th>Year</th>
            <th>Mileage</th>
            <th>Fuel</th>
            <th>Transmission</th>
            <th>Details</th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>

    <script>
        const datatableUrl = '@Url.Action("Datatable", "Home")';
        const detailsBaseUrl = '@Url.Action("Details", "Home")'; // /Home/Details

        const table = $('#vehiclesTable').DataTable({
            serverSide: true,
            processing: true,
            ajax: {
                url: datatableUrl,
                type: 'POST'
            },
            columnDefs: [
                { targets: 0, width: "140px" }, // Photo
                { targets: 8, width: "90px" }   // Details button
            ],
            columns: [
                {
                    data: 'coverPhotoUrl',
                    orderable: false,
                    searchable: false,
                    render: function (url, type, row) {
                        const img = url ? url : 'https://via.placeholder.com/120x80?text=No+Photo';
                        const detailsUrl = `${detailsBaseUrl}/${row.id}`;

                        return `
                                    <a href="${detailsUrl}" title="View details" style="display:inline-block;">
                                        <img src="${img}"
                                             alt="vehicle"
                                             loading="lazy"
                                             style="
                                                width:120px;
                                                height:80px;
                                                object-fit:cover;
                                                border-radius:6px;
                                                border:1px solid #ddd;
                                             " />
                                    </a>
                                `;
                    }
                },
                { data: 'make' },
                { data: 'model' },
                { data: 'trim' },
                { data: 'year' },
                { data: 'mileage' },
                { data: 'fuelType' },
                { data: 'transmission' },
                {
                    data: 'id',
                    orderable: false,
                    searchable: false,
                    render: function (id) {
                        const detailsUrl = `${detailsBaseUrl}/${id}`; // /Home/Details/5
                        return `<a class="btn btn-sm btn-outline-primary" href="${detailsUrl}">Details</a>`;
                    }
                }
            ]
        });
    </script>
}
