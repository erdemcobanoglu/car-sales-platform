@model Presentation.Models.Vehicle

@{
    ViewData["Title"] = "Vehicle Details";
    var cover = Model.Photos?.FirstOrDefault(p => p.IsCover)?.Url
                ?? Model.Photos?.OrderBy(p => p.SortOrder).FirstOrDefault()?.Url
                ?? "https://via.placeholder.com/1200x700?text=No+Photo";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h2 class="mb-0">
            @Model.Make.Name @Model.Model.Name
            @if (Model.Trim != null)
            {
                <span class="text-muted">• @Model.Trim.Name</span>
            }
        </h2>
        <div class="text-muted">
            @Model.Year • @Model.BodyType • @Model.FuelType • @Model.Transmission
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-controller="Vehicles" asp-action="Index">Back</a>
        <a class="btn btn-primary" href="#" onclick="openEditFromDetails(@Model.Id); return false;">Edit</a>
    </div>
</div>

<div class="row g-3">
    <!-- LEFT: Photos -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="ratio ratio-16x9 bg-light rounded overflow-hidden">
                    <img id="mainPhoto"
                         src="@cover"
                         class="w-100 h-100"
                         style="object-fit: cover;"
                         alt="Vehicle photo" />
                </div>

                @if (Model.Photos != null && Model.Photos.Any())
                {
                    <div class="mt-3 d-flex flex-wrap gap-2">
                        @foreach (var p in Model.Photos.OrderBy(x => x.SortOrder))
                        {
                            <button type="button"
                                    class="border-0 p-0 bg-transparent"
                                    onclick="setMainPhoto('@p.Url')">
                                <img src="@p.Url"
                                     alt="thumb"
                                     width="88"
                                     height="56"
                                     class="rounded border"
                                     style="object-fit: cover;" />
                            </button>
                        }
                    </div>
                }
                else
                {
                    <div class="mt-3 text-muted">No photos uploaded yet.</div>
                }
            </div>
        </div>
    </div>

    <!-- RIGHT: Quick Facts -->
    <div class="col-lg-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-white">
                <strong>Quick facts</strong>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-6 text-muted">Mileage</dt>
                    <dd class="col-6 text-end fw-semibold">
                        @Model.Mileage.ToString("N0") @Model.MileageUnit
                    </dd>

                    <dt class="col-6 text-muted">Year</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.Year</dd>

                    <dt class="col-6 text-muted">Engine</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.EngineLiters.ToString("0.0") L</dd>

                    <dt class="col-6 text-muted">Fuel</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.FuelType</dd>

                    <dt class="col-6 text-muted">Transmission</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.Transmission</dd>

                    <dt class="col-6 text-muted">Owners</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.TotalOwners</dd>

                    <dt class="col-6 text-muted">NCT expiry</dt>
                    <dd class="col-6 text-end fw-semibold">
                        @(Model.NctExpiry.HasValue ? Model.NctExpiry.Value.ToString("yyyy-MM-dd") : "-")
                    </dd>

                    <dt class="col-6 text-muted">Price</dt>
                    <dd class="col-6 text-end fw-semibold">€@Model.Price.ToString("N0")</dd> 

                    <dt class="col-6 text-muted">Contact </dt>
                    <dd class="col-6 text-end fw-semibold">@Model.Owner?.Profile?.Phone</dd>
                </dl>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <strong>Actions</strong>
            </div>
            <div class="card-body d-grid gap-2">
                <a class="btn btn-outline-primary" asp-controller="Vehicles" asp-action="Index">Go to list</a>
                <button class="btn btn-outline-danger" type="button"
                        onclick="deleteFromDetails(@Model.Id)">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Overview -->
<div class="card shadow-sm mt-3">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <strong>Vehicle overview</strong>
        <span class="badge text-bg-light">ID: @Model.Id</span>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <div class="text-muted small">Make</div>
                <div class="fw-semibold">@Model.Make.Name</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Model</div>
                <div class="fw-semibold">@Model.Model.Name</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Trim</div>
                <div class="fw-semibold">@(Model.Trim?.Name ?? "-")</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Trim level</div>
                <div class="fw-semibold">@(Model.Trim?.Level ?? "-")</div>
            </div>

            <div class="col-md-3">
                <div class="text-muted small">Body type</div>
                <div class="fw-semibold">@Model.BodyType</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Seats</div>
                <div class="fw-semibold">@Model.Seats</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Doors</div>
                <div class="fw-semibold">@Model.Doors</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Colour</div>
                <div class="fw-semibold">@Model.Colour</div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden anti-forgery for delete -->
<form id="antiForgeryFormDetails" method="post">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function setMainPhoto(url) {
            document.getElementById('mainPhoto').src = url;
        }

        // Eğer Details sayfasında da modal edit istiyorsan (Index’teki modal mantığıyla):
        async function openEditFromDetails(id) {
            // İstersen bu kısmı sonra indextekine benzer modal ile ekleriz.
            window.location.href = '@Url.Action("Edit", "Vehicles")/' + id;
        }

        function deleteFromDetails(id) {
            if (!confirm('Delete this vehicle?')) return;

            const token = document.querySelector('#antiForgeryFormDetails input[name="__RequestVerificationToken"]').value;

            fetch('@Url.Action("Delete", "Vehicles")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: new URLSearchParams({ id: id, __RequestVerificationToken: token })
            })
                .then(r => r.json())
                .then(res => {
                    if (res && res.ok) {
                        window.location.href = '@Url.Action("Index", "Vehicles")';
                    } else {
                        alert('Delete failed');
                    }
                })
                .catch(() => alert('Delete failed'));
        }
    </script>
}
