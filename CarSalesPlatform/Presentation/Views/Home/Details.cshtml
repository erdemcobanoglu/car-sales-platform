@model Presentation.Models.Vehicle

@{
    ViewData["Title"] = "Vehicle Details";
    var cover = Model.Photos?.FirstOrDefault(p => p.IsCover)?.Url
                ?? Model.Photos?.OrderBy(p => p.SortOrder).FirstOrDefault()?.Url
                ?? "https://via.placeholder.com/1200x700?text=No+Photo";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h2 class="mb-0">
            @Model.Make.Name @Model.Model.Name
            @if (Model.Trim != null)
            {
                <span class="text-muted">• @Model.Trim.Name</span>
            }
        </h2>
        <div class="text-muted">
            @Model.Year • @Model.BodyType • @Model.FuelType • @Model.Transmission
        </div>
    </div>

    <div>
        <a class="btn btn-outline-secondary"
           asp-controller="Home"
           asp-action="Index">
            Back to list
        </a>
    </div>
</div>

<div class="row g-3">
    <!-- LEFT: Photos -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="ratio ratio-16x9 bg-light rounded overflow-hidden">
                    <img id="mainPhoto"
                         src="@cover"
                         class="w-100 h-100"
                         style="object-fit: cover;"
                         alt="Vehicle photo" />
                </div>

                @if (Model.Photos != null && Model.Photos.Any())
                {
                    <div class="mt-3 d-flex flex-wrap gap-2">
                        @foreach (var p in Model.Photos.OrderBy(x => x.SortOrder))
                        {
                            <button type="button"
                                    class="border-0 p-0 bg-transparent"
                                    onclick="setMainPhoto('@p.Url')">
                                <img src="@p.Url"
                                     alt="thumb"
                                     width="88"
                                     height="56"
                                     class="rounded border"
                                     style="object-fit: cover;" />
                            </button>
                        }
                    </div>
                }
                else
                {
                    <div class="mt-3 text-muted">No photos uploaded yet.</div>
                }
            </div>
        </div>
    </div>

    <!-- RIGHT: Quick Facts -->
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <strong>Quick facts</strong>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-6 text-muted">Mileage</dt>
                    <dd class="col-6 text-end fw-semibold">
                        @Model.Mileage.ToString("N0") @Model.MileageUnit
                    </dd>

                    <dt class="col-6 text-muted">Year</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.Year</dd>

                    <dt class="col-6 text-muted">Engine</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.EngineLiters.ToString("0.0") L</dd>

                    <dt class="col-6 text-muted">Fuel</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.FuelType</dd>

                    <dt class="col-6 text-muted">Transmission</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.Transmission</dd>

                    <dt class="col-6 text-muted">Owners</dt>
                    <dd class="col-6 text-end fw-semibold">@Model.TotalOwners</dd>

                    <dt class="col-6 text-muted">NCT expiry</dt>
                    <dd class="col-6 text-end fw-semibold">
                        @(Model.NctExpiry.HasValue ? Model.NctExpiry.Value.ToString("yyyy-MM-dd") : "-")
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Overview -->
<div class="card shadow-sm mt-3">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <strong>Vehicle overview</strong>
        <span class="badge text-bg-light">ID: @Model.Id</span>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <div class="text-muted small">Make</div>
                <div class="fw-semibold">@Model.Make.Name</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Model</div>
                <div class="fw-semibold">@Model.Model.Name</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Trim</div>
                <div class="fw-semibold">@(Model.Trim?.Name ?? "-")</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Trim level</div>
                <div class="fw-semibold">@(Model.Trim?.Level ?? "-")</div>
            </div>

            <div class="col-md-3">
                <div class="text-muted small">Body type</div>
                <div class="fw-semibold">@Model.BodyType</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Seats</div>
                <div class="fw-semibold">@Model.Seats</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Doors</div>
                <div class="fw-semibold">@Model.Doors</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Colour</div>
                <div class="fw-semibold">@Model.Colour</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setMainPhoto(url) {
            document.getElementById('mainPhoto').src = url;
        }
    </script>
}
