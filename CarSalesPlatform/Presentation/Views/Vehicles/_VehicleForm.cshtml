@model Presentation.ViewModels.Vehicles.VehicleFormVm
@using Presentation.Models.Enums

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <strong>Vehicle information</strong>
    </div>

    <div class="card-body">
        <div class="row g-3">

            <!-- ✅ Make / Model / Trim: free text -->
            <div class="col-md-4">
                <label class="form-label" asp-for="MakeName">Make</label>
                <input class="form-control" asp-for="MakeName" placeholder="e.g. Audi" />
                <span class="text-danger" asp-validation-for="MakeName"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label" asp-for="ModelName">Model</label>
                <input class="form-control" asp-for="ModelName" placeholder="e.g. A4 / 3 Series" />
                <span class="text-danger" asp-validation-for="ModelName"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label" asp-for="TrimName">Trim</label>
                <input class="form-control" asp-for="TrimName" placeholder="(optional) e.g. S line" />
                <span class="text-danger" asp-validation-for="TrimName"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label" asp-for="Year">Year</label>
                <input class="form-control" asp-for="Year" />
                <span class="text-danger" asp-validation-for="Year"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label" asp-for="Mileage">Mileage</label>
                <input class="form-control" asp-for="Mileage" />
                <span class="text-danger" asp-validation-for="Mileage"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label" asp-for="MileageUnit">Mileage unit</label>
                <select class="form-select" asp-for="MileageUnit" asp-items="Html.GetEnumSelectList<MileageUnit>()"></select>
            </div>

            <div class="col-md-3">
                <label class="form-label" asp-for="EngineLiters">Engine (L)</label>
                <input class="form-control" asp-for="EngineLiters" />
                <span class="text-danger" asp-validation-for="EngineLiters"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label" asp-for="FuelType">Fuel</label>
                <select class="form-select" asp-for="FuelType" asp-items="Html.GetEnumSelectList<FuelType>()"></select>
            </div>

            <div class="col-md-4">
                <label class="form-label" asp-for="Transmission">Transmission</label>
                <select class="form-select" asp-for="Transmission" asp-items="Html.GetEnumSelectList<TransmissionType>()"></select>
            </div>

            <div class="col-md-4">
                <label class="form-label" asp-for="BodyType">Body type</label>
                <select class="form-select" asp-for="BodyType" asp-items="Html.GetEnumSelectList<BodyType>()"></select>
            </div>

            <div class="col-md-3">
                <label class="form-label" asp-for="Seats">Seats</label>
                <input class="form-control" asp-for="Seats" />
                <span class="text-danger" asp-validation-for="Seats"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label" asp-for="Doors">Doors</label>
                <input class="form-control" asp-for="Doors" />
                <span class="text-danger" asp-validation-for="Doors"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label" asp-for="Colour">Colour</label>
                <input class="form-control" asp-for="Colour" />
                <span class="text-danger" asp-validation-for="Colour"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label" asp-for="TotalOwners">Owners</label>
                <input class="form-control" asp-for="TotalOwners" />
                <span class="text-danger" asp-validation-for="TotalOwners"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label" asp-for="NctExpiry">NCT expiry</label>
                <input class="form-control" asp-for="NctExpiry" placeholder="YYYY-MM-DD" />
            </div>

            <div class="col-md-4">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price"
                       class="form-control"
                       type="number"
                       step="1"
                       min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

        </div>
    </div>
</div>

@* ✅ Script yok: dropdown bağımlılığı kaldırıldı *@
